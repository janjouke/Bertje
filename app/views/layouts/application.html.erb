<!DOCTYPE html>
<html>
<head>
  <title>Bertje</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if current_user %>
	<div id="user_nav">
    Logged in as <%= current_user.username %>.
    <%= link_to "Log out", logout_path %>
	</div>
<% end %>

	<% flash.each do |name, msg| %>
	  <%= content_tag :div, msg, :id => "flash_#{name}" %>
	<% end %>

 <%= yield %>
</body>
</html>
